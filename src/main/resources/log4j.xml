<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders: 로그 출력 대상 설정 -->
    <!-- 콘솔 Appender: 로그를 콘솔에 출력 -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p [%c] %m%n" />
            <!-- 패턴: 날짜, 로그 레벨, 클래스명, 메시지 -->
        </layout>
    </appender>

    <!-- 파일 Appender: 로그를 파일에 저장 (옵션) -->
    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/app.log" />
        <param name="MaxFileSize" value="10MB" />
        <param name="MaxBackupIndex" value="10" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p [%c] %m%n" />
        </layout>
    </appender>

    <!-- Application Loggers: 특정 패키지에 대한 로그 설정 -->
    <logger name="com" additivity="false">
        <level value="debug" />
        <appender-ref ref="console" />
        <appender-ref ref="file" />
        <!-- com 패키지의 로그를 debug 레벨로 콘솔과 파일에 출력 -->
    </logger>

    <!-- 3rd Party Loggers: Spring 관련 패키지 로그 설정 -->
    <logger name="org.springframework.core">
        <level value="info" />
        <appender-ref ref="console" />
    </logger>
    <logger name="org.springframework.beans">
        <level value="info" />
        <appender-ref ref="console" />
    </logger>
    <logger name="org.springframework.context">
        <level value="info" />
        <appender-ref ref="console" />
    </logger>
    <logger name="org.springframework.web">
        <level value="info" />
        <appender-ref ref="console" />
    </logger>

    <!-- Root Logger: 기본 로그 설정 -->
    <root>
        <priority value="info" />
        <appender-ref ref="console" />
        <appender-ref ref="file" />
        <!-- 모든 로그를 info 레벨 이상으로 콘솔과 파일에 출력 -->
    </root>

</log4j:configuration>